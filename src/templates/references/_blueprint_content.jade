.content
  .content-wrap.content-wrap--full
    +references-content-details(reference, true)

    each entry in reference.data.content
      case entry.element
        when "copy"
          +references-blueprint-introduction(entry.content)

        when "category"
          +references-blueprint-group(entry.content, entry.meta, reference.baseline)

  .sidebar.sidebar--right
